{
	"playbooks": [
		{
			"label": "Pull a local copy of live site",
			"name": "localCopy",
			"yaml": "pull-full-copy.yml",
			"fields": [
				{
					"name":	"local",
					"label": "Local directory to save in",
					"returnType": "string",
					"value": "/var/tmp"
				},
				{
					"name": "source",
					"label": "Select remote folder to pull",
					"returnType": "string",
					"value": {
						"helperFunction": "get_filetree_info"
					}
				},
				{
					"name": "withdb",
					"label": "Create new DB?",
					"returnType": "boolean",
					"value": false
				}
			],
			"configNodes": [
				{
					"argName": "mysql_root_pw",
					"node": "localMySqlRootPassword"
				}
			],
			"constants": []
		}
	]
}
